<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.call.tracker.customview.EditTextRoboto
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="@string/search" />

        <com.call.tracker.customview.ButtonRoboto
            android:id="@+id/butSearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.call.tracker.customview.ButtonRoboto
            android:id="@+id/butContactList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="callContactList"
            android:text="Contact List" />

        <com.call.tracker.customview.ButtonRoboto
            android:id="@+id/butAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callAdd"
            android:text="Add"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:background="#666666" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <com.call.tracker.customview.TextViewRoboto
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="#000" />

        <com.call.tracker.customview.TextViewRoboto
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Call"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="#000" />

        <com.call.tracker.customview.TextViewRoboto
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Call"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listContact"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="false"
        android:fastScrollEnabled="true"
        android:scrollbarFadeDuration="0" />

</LinearLayout>