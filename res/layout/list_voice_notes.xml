<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_margin="3dp"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/quickContactBadgeVoiceList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:src="@drawable/man" />

    <LinearLayout
        android:id="@+id/ka"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.call.tracker.customview.TextViewRoboto
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:gravity="left"
            android:text="Contact Name Here"
            android:textColor="@color/theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.call.tracker.customview.TextViewRoboto
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="@string/date_recorded"
            android:textColor="@color/theme_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/as"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="0.2"
        android:gravity="top" >

        <ImageView
            android:id="@+id/textUrgent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:contentDescription="Urgency Describer"
            android:src="@drawable/icon_alert_red"
            android:text="@string/urgent" />
    </LinearLayout>

</LinearLayout>