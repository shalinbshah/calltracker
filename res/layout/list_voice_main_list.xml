<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_margin="3dp"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <QuickContactBadge
        android:id="@+id/quickContactBadgeVoiceList"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <com.call.tracker.customview.TextViewRoboto
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="2"
        android:text="Contact Name Here"
        android:textColor="@color/theme_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/textUrgent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:contentDescription="Urgency Describer"
        android:src="@drawable/icon_alert_red"
        android:text="@string/urgent"
        android:textSize="16sp" />

    <com.call.tracker.customview.TextViewRoboto
        android:id="@+id/textDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="2"
        android:text="@string/date_recorded"
        android:textColor="@color/theme_color"
        android:textSize="12sp" />

</LinearLayout>